
@{
    ViewBag.Title = "用户列表";
}

@using Webdiyer.WebControls.Mvc
@model IPagedList<User>


<!-- /section:basics/sidebar -->
<div class="main-content">
    <div class="main-content-inner">
        <!-- #section:basics/content.breadcrumbs -->
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
            </script>
            <!-- /section:basics/content.breadcrumbs -->
            <ul class="breadcrumb">
                <li> <i class="ace-icon fa fa-home home-icon"></i>首页</li>
                <li>用户管理</li>
                <li>用户列表</li>
            </ul><!-- /.breadcrumb -->
        </div>
        <div class="page-content">
            <div class="row">
                <div class="row mt15">
                    <div class="col-xs-6">
                        <div class="dataTables_length" id="sample-table-2_length">
                            <a class="btn btn-sm btn-primary" href="/admin/user/edit">新增用户</a>
                        </div>
                    </div>
                    <form action="/admin/user/index" method="get">
                        <div class="ch_choose_top">
                            <div class="h_top_txt">
                                <input class="h_search_txt" name="kw" type="text" placeholder="请输入关键词" value="@ViewBag.KW">
                            </div>
                            <input class="h_button" type="submit" value="查询">
                            <div style="clear: both;"></div>
                        </div>
                    </form>
                </div>

                <div class="col-xs-12">
                    <div>
                        <table id="sample-table-2" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="center">
                                        <label class="position-relative">
                                            <input type="checkbox" class="ace" />
                                            <span class="lbl"></span>
                                        </label>
                                    </th>
                                    <th>用户ID</th>
                                    <th>用户头像</th>
                                    <th>用户名</th>
                                    <th>账号</th>
                                    <th>级别</th>
                                    <th>积分</th>
                                    <th>注册时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{
                                    foreach(var item in Model) {
                                        <tr>
                                            <td class="center">
                                                <label class="position-relative">
                                                    <input type="checkbox" class="ace" />
                                                    <span class="lbl"></span>
                                                </label>
                                            </td>
                                            <td>@item.Id</td>
                                            <td><img class="img-responsive" height="20" width="20" src='@item.Image' /></td>
                                            <td>@item.Name</td>
                                            <td>@item.Account</td>
                                            <td>@item.Level.Name</td>
                                            <td>@item.Integral</td>
                                            <td>@item.CreateTime</td>
                                            <td>
                                                <div class="hidden-sm hidden-xs action-buttons">
                                                    <a href="/admin/user/edit?Id=@item.Id">编辑</a><a href="/admin/user/delete?Id=@item.Id">删除</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.page-content -->
    </div>
    @Html.Pager(Model,new PagerOptions() {
    ContainerTagName = "ul", //分页标签
    CssClass = "pagination", //分页样式
    PagerItemTemplate = "<li class=\"paginate_button\">{0}</li>",
    CurrentPagerItemTemplate = "<li class=\"paginate_button active\"><a href='#'>{0}</a></li>",
    ShowFirstLast = false, //该值指定是否显示第一页和最后一页分页导航按钮。
    NextPageText = "下一页",
    PrevPageText = "上一页",
    HorizontalAlign = "right", //获取或设置分页控件水平对齐方式。
    ShowMorePagerItems = true, //指定是否显示更多页按钮
    ShowNumericPagerItems = true //指定是否显示数字页索引按钮及更多页按钮。
})
</div><!-- /.main-content -->