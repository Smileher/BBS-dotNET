
@{
    ViewBag.Title = "分类管理";
}
@model List<Category>

<!-- /section:basics/sidebar -->
<div class="main-content">
    <div class="main-content-inner">
        <!-- #section:basics/content.breadcrumbs -->
        <div class="breadcrumbs" id="breadcrumbs">
            <script type="text/javascript">
                try { ace.settings.check('breadcrumbs', 'fixed') } catch (e) { }
            </script>
            <!-- /section:basics/content.breadcrumbs -->
            <ul class="breadcrumb">
                <li> <i class="ace-icon fa fa-home home-icon"></i>首页</li>
                <li>帖子管理</li>
                <li>分类管理</li>
            </ul><!-- /.breadcrumb -->
        </div>
        <div class="page-content">
            <div class="row">
                <div class="row mt15">
                    <div class="col-xs-6">
                        <div class="dataTables_length" id="sample-table-2_length">
                            <a class="btn btn-sm btn-primary" href="/admin/post/EditCategory">新增分类</a>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div>
                        <table id="sample-table-2" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="center">
                                        <label class="position-relative">
                                            <input type="checkbox" class="ace" />
                                            <span class="lbl"></span>
                                        </label>
                                    </th>
                                    <th>ID</th>
                                    <th>分类</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    @{
                                        foreach(var item in Model) {
                                        <tr>
                                            <td class="center">
                                                <label class="position-relative">
                                                    <input type="checkbox" class="ace" />
                                                    <span class="lbl"></span>
                                                </label>
                                            </td>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>
                                                <div class="hidden-sm hidden-xs action-buttons">
                                                    <a href="/admin/post/EditCategory?Id=@item.Id">编辑</a><a href="/admin/post/DeleteCategory?Id=@item.Id">删除</a>
                                                </div>
                                            </td>
                                        </tr>
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.page-content -->
        </div>
    </div>
</div>
